# Frontend (safe to expose in browser)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_public_anon_key
# Leave empty in Netlify unless you intentionally use another API origin.
# Recommended for this repo: keep blank and use same-origin /api routes.
VITE_API_URL=
VITE_FRONTEND_URL=https://your-site.netlify.app

# Backend / Netlify functions (secret)
NODE_ENV=production
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_JWT_SECRET=optional_supabase_jwt_secret
JWT_SECRET=your_strong_app_jwt_secret
# Optional: comma-separated storage bucket fallback order for employee product uploads.
# Example: PRODUCT_UPLOAD_BUCKETS=objects,avatars
PRODUCT_UPLOAD_BUCKETS=
# Optional per-type override (comma-separated)
PRODUCT_IMAGE_BUCKETS=
PRODUCT_VIDEO_BUCKETS=
PRODUCT_PDF_BUCKETS=

# Auth / cookies
AUTH_COOKIE_NAME=itm_access
AUTH_CSRF_COOKIE=itm_csrf
AUTH_COOKIE_DOMAIN=
AUTH_TOKEN_TTL=7d
AUTH_COOKIE_MAX_AGE_DAYS=7
ENABLE_SUPABASE_AUTH_MIGRATION=true
ENABLE_SUPABASE_AUTH_SIGNUP=true

# Superadmin auth
SUPERADMIN_JWT_SECRET=your_strong_superadmin_secret
SUPERADMIN_TOKEN_TTL=12h

# OTP / email
OTP_FROM_NAME=IndianTradeMart
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# SMTP alternative (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Payments
RAZORPAY_KEY_ID=rzp_live_xxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
APP_NAME=IndianTradeMart

# AI chatbot
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
